{
    "hand_animation_on_swap": false,
    "model": {
        "type": "condition",
        "property": "minecraft:selected",
        "on_true": {
            "type": "select",
            "cases": [
                {
                    "model": {
                        "type": "minecraft:model",
                        "model": "lipartefacts:item/drilling_pickaxe"
                    },
                    "when": "firstperson_lefthand"
                },
                {
                    "model": {
                        "type": "minecraft:model",
                        "model": "lipartefacts:item/drilling_pickaxe"
                    },
                    "when": "firstperson_righthand"
                }
            ],
            "fallback": {
                "type": "minecraft:model",
                "model": "lipartefacts:item/drilling_pickaxe_selected"
            },
            "property": "minecraft:display_context"
        },
        "on_false": {
            "type": "minecraft:model",
            "model": "lipartefacts:item/drilling_pickaxe"
        }
    }
}